#!/bin/bash

DIR="$(dirname "$0")"
export PI_INCLUDES="${DIR}/inc"

. "${PI_INCLUDES}/vars.sh"

PI_IMAGE_FILE="$1"
shift
NAME="${1-pi:latest}"
shift

echo "Creating docker image ${NAME} from disk image ${PI_IMAGE_FILE}"
echo "This will take some time."

"${DIR}/rpi-image-tool" export-docker - | docker import - "${NAME}" "$@"
